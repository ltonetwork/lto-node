{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "lto-data",
      "host": {
        "sourcePath": "/lto/data"
      }
    },
    {
      "name": "lto-index",
      "host": {
        "sourcePath": "/lto/index"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "public-node",
      "image": "ltonetwork/public-node",
      "essential": true,
      "memoryReservation": 1024,
      "portMappings": [
        {
          "hostPort": 6869,
          "containerPort": 6869
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "lto-data",
          "containerPath": "/lto/data"
        }
      ],
      "environment": [
        {
          "name": "LTO_NETWORK",
          "value": "MAINNET"
        },
        {
          "name": "ENABLE_REST_API",
          "value": "true"
        }
      ]
    },
    {
      "name": "indexer",
      "image": "ltonetwork/indexer",
      "essential": true,
      "memoryReservation": 128,
      "mountPoints": [
        {
          "sourceVolume": "lto-index",
          "containerPath": "/usr/app/lto-index"
        }
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "NODE_URL",
          "value": "http://public-node:6869"
        },
        {
          "name": "ASSOCIATION_INDEXING",
          "value": "all"
        },
        {
          "name": "ANCHOR_INDEXING",
          "value": "all"
        }
      ]
    }
  ]
}
