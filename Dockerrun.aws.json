{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "lto-data",
      "host": {
        "sourcePath": "/lto/data"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "ltonetwork/public-node-proxy",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["indexer", "public-node"]
    },
    {
      "name": "indexer",
      "image": "ltonetwork/indexer",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "NODE_URL",
          "value": "http://public-node:6869"
        },
        {
          "name": "TRANSACTION_INDEXING",
          "value": "true"
        },
        {
          "name": "ASSOCIATION_INDEXING",
          "value": "all"
        },
        {
          "name": "IDENTITY_INDEXING",
          "value": "true"
        },
        {
          "name": "ANCHOR_INDEXING",
          "value": "all"
        },
        {
          "name": "STATS_INDEXING",
          "value": "true"
        }
      ],
      "links": ["public-node"]
    },
    {
      "name": "public-node",
      "image": "ltonetwork/public-node:v1.4.1",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 6869,
          "containerPort": 6869
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "lto-data",
          "containerPath": "/lto/data"
        }
      ],
      "environment": [
        {
          "name": "LTO_NETWORK",
          "value": "TESTNET"
        }
      ]
    }
  ]
}
