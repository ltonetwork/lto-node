{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "lto-data",
      "host": {
        "sourcePath": "/lto/data"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "anchor",
      "image": "legalthings/anchor",
      "essential": true,
      "memoryReservation": 128,
      "links": [
        "public-node",
        "redis"
      ]
    },
    {
      "name": "public-node",
      "image": "legalthings/public-node",
      "essential": true,
      "memoryReservation": 1024,
      "mountPoints": [
        {
          "sourceVolume": "lto-data",
          "containerPath": "/lto/data"
        }
      ]
    },
    {
      "name": "webserver",
      "image": "legalthings/webserver",
      "essential": true,
      "memoryReservation": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "legalevents",
        "legalflow",
        "event-queuer"
      ]
    },
    {
      "name": "legalflow",
      "image": "legalthings/legalflow",
      "memoryReservation": 128,
      "links": [
        "event-queuer",
        "mongo"
      ],
      "environment": [
        {
          "name": "phpmemory_limit",
          "value": "512M"
        },
        {
          "name": "APPLICATION_ENV",
          "value": "lto"
        }
      ]
    },
    {
      "name": "legalevents",
      "image": "legalthings/legalevents",
      "essential": true,
      "memoryReservation": 128,
      "links": [
        "legalflow",
        "event-queuer",
        "mongo",
        "anchor"
      ],
      "environment": [
        {
          "name": "phpmemory_limit",
          "value": "512M"
        },
        {
          "name": "APPLICATION_ENV",
          "value": "lto"
        }
      ]
    },
    {
      "name": "event-dispatcher",
      "image": "legalthings/event-dispatcher",
      "essential": true,
      "memoryReservation": 128,
      "links": [
        "rabbitmq",
        "legalevents"
      ],
      "environment": [
        {
          "name": "DISPATCHER_MODULES_QUEUER",
          "value": "0"
        },
        {
          "name": "NODE_ENV",
          "value": "lto"
        }
      ]
    },
    {
      "name": "event-queuer",
      "image": "legalthings/event-dispatcher",
      "essential": true,
      "memoryReservation": 128,
      "links": [
        "rabbitmq"
      ],
      "environment": [
        {
          "name": "DISPATCHER_MODULES_DISPATCHER",
          "value": "0"
        },
        {
          "name": "NODE_ENV",
          "value": "lto"
        }
      ]
    },
    {
      "name": "mongo",
      "image": "mongo:3",
      "essential": true,
      "memoryReservation": 128
    },
    {
      "name": "redis",
      "image": "redis",
      "essential": true,
      "memoryReservation": 128
    },
    {
      "name": "rabbitmq",
      "image": "legalthings/rabbitmq",
      "essential": true,
      "memoryReservation": 128,
      "portMappings": [
        {
          "hostPort": 5672,
          "containerPort": 5672
        }
      ]
    }
  ]
}
