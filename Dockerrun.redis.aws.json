{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "lto-data",
      "host": {
        "sourcePath": "/lto/data"
      }
    },
    {
      "name": "lto-redis",
      "host": {
        "sourcePath": "/lto/redis"
      }
    },
    {
      "name": "lto-graph",
      "host": {
        "sourcePath": "/lto/graph"
      }
    },
    {
      "name": "lto-index",
      "host": {
        "sourcePath": "/lto/index"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "legalthings/public-node-proxy",
      "essential": true,
      "memoryReservation": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["indexer", "public-node"]
    },
    {
      "name": "indexer",
      "image": "ltonetwork/indexer",
      "essential": true,
      "memoryReservation": 128,
      "mountPoints": [
        {
          "sourceVolume": "lto-index",
          "containerPath": "/usr/app/lto-index"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "NODE_URL",
          "value": "http://public-node:6869"
        },
        {
          "name": "STORAGE_TYPE",
          "value": "redis"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://redis"
        },
        {
          "name": "REDIS_GRAPH_HOST",
          "value": "graph"
        },
        {
          "name": "REDIS_GRAPH_PORT",
          "value": "6379"
        },
        {
          "name": "TRANSACTION_INDEXING",
          "value": "true"
        },
        {
          "name": "ASSOCIATION_INDEXING",
          "value": "all"
        },
        {
          "name": "IDENTITY_INDEXING",
          "value": "true"
        },
        {
          "name": "ANCHOR_INDEXING",
          "value": "all"
        },
        {
          "name": "STATS_INDEXING",
          "value": "true"
        }
      ],
      "links": ["public-node", "redis", "graph"]
    },
    {
      "name": "public-node",
      "image": "ltonetwork/public-node",
      "essential": true,
      "memoryReservation": 1024,
      "mountPoints": [
        {
          "sourceVolume": "lto-data",
          "containerPath": "/lto/data"
        }
      ],
      "environment": [
        {
          "name": "LTO_NETWORK",
          "value": "MAINNET"
        },
        {
          "name": "ENABLE_REST_API",
          "value": "true"
        }
      ]
    },
    {
      "name": "redis",
      "image": "redis",
      "essential": true,
      "memoryReservation": 128,
      "mountPoints": [
        {
          "sourceVolume": "lto-redis",
          "containerPath": "/data"
        }
      ]
    },
    {
      "name": "graph",
      "image": "redislabs/redisgraph",
      "essential": true,
      "memoryReservation": 128,
      "mountPoints": [
        {
          "sourceVolume": "lto-graph",
          "containerPath": "/data"
        }
      ]
    }
  ]
}
