{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "lto-data",
      "host": {
        "sourcePath": "/lto/data"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "public-node",
      "image": "ltonetwork/public-node",
      "essential": true,
      "memoryReservation": 1024,
      "mountPoints": [
        {
          "sourceVolume": "lto-data",
          "containerPath": "/lto/data"
        }
      ]
    },
    {
      "name": "indexer",
      "image": "ltonetwork/indexer",
      "essential": true,
      "memoryReservation": 128,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "NODE_URL",
          "value": "http://public-node:6869"
        },
        {
          "name": "TRANSACTION_INDEXING",
          "value": "true"
        },
        {
          "name": "ASSOCIATION_INDEXING",
          "value": "all"
        },
        {
          "name": "IDENTITY_INDEXING",
          "value": "true"
        },
        {
          "name": "TRUST_NETWORK_INDEXING",
          "value": "true"
        },
        {
          "name": "TRUST_NETWORK_ROLES",
          "value": "{\"root\": {\"description\": \"The root role\",\"issues\": [{ \"type\": 100, \"role\": \"university\" }]},\"university\": {\"description\": \"University\"}}"
        }
      ]
    }
  ]
}
